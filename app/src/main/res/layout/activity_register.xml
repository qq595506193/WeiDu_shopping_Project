<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bac01"
    tools:context=".ui.activity.RegisterActivity">

    <RelativeLayout
        android:id="@+id/relativeLayout01"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100px"
        android:layout_marginTop="100dp"
        android:layout_marginRight="100px"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <EditText
            android:id="@+id/ed_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:background="@null"
            android:drawableLeft="@drawable/login_phone"
            android:drawablePadding="10dp"
            android:ellipsize="end"
            android:hint="手机号"
            android:singleLine="true"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff"
            android:textSize="20sp" />

    </RelativeLayout>

    <View
        android:id="@+id/view_01"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="#ffffff"
        app:layout_constraintLeft_toLeftOf="@id/relativeLayout01"
        app:layout_constraintRight_toRightOf="@id/relativeLayout01"
        app:layout_constraintTop_toBottomOf="@id/relativeLayout01" />


    <RelativeLayout
        android:id="@+id/relativeLayout03"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="@id/relativeLayout01"
        app:layout_constraintRight_toRightOf="@id/relativeLayout01"
        app:layout_constraintTop_toBottomOf="@id/view_01">


        <EditText
            android:id="@+id/ed_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@id/tv_getCode"
            android:background="@null"
            android:drawableLeft="@drawable/login_verif"
            android:drawablePadding="10dp"
            android:ellipsize="end"
            android:hint="验证码"
            android:singleLine="true"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff"
            android:textSize="20sp" />


        <TextView
            android:id="@+id/tv_getCode"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:text="获取验证码"
            android:textColor="#ffffff" />

    </RelativeLayout>

    <View
        android:id="@+id/view_03"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="#ffffff"
        app:layout_constraintLeft_toLeftOf="@id/relativeLayout01"
        app:layout_constraintRight_toRightOf="@id/relativeLayout01"
        app:layout_constraintTop_toBottomOf="@id/relativeLayout03" />


    <RelativeLayout
        android:id="@+id/relativeLayout02"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="@id/relativeLayout01"
        app:layout_constraintRight_toRightOf="@id/relativeLayout01"
        app:layout_constraintTop_toBottomOf="@id/relativeLayout03">


        <EditText
            android:id="@+id/ed_pwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@id/icon_eye"
            android:background="@null"
            android:drawableLeft="@drawable/login_lock"
            android:drawablePadding="10dp"
            android:ellipsize="end"
            android:hint="登录密码"
            android:password="true"
            android:singleLine="true"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff"
            android:textSize="20sp" />


        <ImageView
            android:id="@+id/icon_eye"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/login_eye" />

    </RelativeLayout>

    <View
        android:id="@+id/view_02"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="11dp"
        android:background="#ffffff"
        app:layout_constraintLeft_toLeftOf="@id/relativeLayout02"
        app:layout_constraintRight_toRightOf="@id/relativeLayout02"
        app:layout_constraintTop_toBottomOf="@id/relativeLayout02" />


    <TextView
        android:id="@+id/tv_imLogin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="已有账户？立即登录"
        android:textColor="#ffffff"
        app:layout_constraintRight_toRightOf="@id/relativeLayout01"
        app:layout_constraintTop_toBottomOf="@id/view_02" />

    <Button
        android:id="@+id/btn_reg"
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:layout_marginBottom="120dp"
        android:background="@drawable/sele"
        android:text="注册"
        android:textColor="#ff5f71"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_imLogin" />

</android.support.constraint.ConstraintLayout>