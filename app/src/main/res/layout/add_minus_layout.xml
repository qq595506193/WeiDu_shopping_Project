<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <TextView
        android:id="@+id/tv_subtract"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#456f"
        android:gravity="center"
        android:text="-"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/ed_minus"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/ed_minus"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@null"
        android:gravity="center"
        android:text="1"
        app:layout_constraintBottom_toBottomOf="@id/tv_subtract"
        app:layout_constraintLeft_toRightOf="@id/tv_subtract"
        app:layout_constraintRight_toLeftOf="@id/tv_plus"
        app:layout_constraintTop_toTopOf="@id/tv_subtract" />

    <TextView
        android:id="@+id/tv_plus"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#456f"
        android:gravity="center"
        android:text="+"
        app:layout_constraintBottom_toBottomOf="@id/tv_subtract"
        app:layout_constraintLeft_toRightOf="@id/ed_minus"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_subtract" />

</android.support.constraint.ConstraintLayout>